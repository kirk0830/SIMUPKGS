&GLOBAL
  PROJECT graphene
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &SUBSYS
    &CELL
      ABC 2.468 2.468 20.000
      ALPHA_BETA_GAMMA 90.0 90.0 120.0
      PERIODIC XY
    &END CELL
    &COORD
C 0.00000  0.00000  2.17126
C 1.23386  0.71237  2.17126
    &END COORD
    &KIND C    
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS

  &DFT
    BASIS_SET_FILE_NAME E:\cp2k-8.1.0\data\BASIS_MOLOPT
    POTENTIAL_FILE_NAME E:\cp2k-8.1.0\data\POTENTIAL

    &KPOINTS
      SCHEME MONKHORST-PACK  5  5  1
      SYMMETRY F
    &END KPOINTS

    &QS
    &END QS

    &POISSON
      PERIODIC XY
      PSOLVER MT
    &END POISSON

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &MGRID
      CUTOFF 500
      REL_CUTOFF 55
      NGRIDS 5
    &END MGRID
    &SCF
      MAX_SCF 128
      EPS_SCF 1.0E-06
      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &SMEAR
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE 300
      &END SMEAR
      ADDED_MOS 10
    &END SCF
    &PRINT
      &BAND_STRUCTURE
            ADDED_MOS 10
            FILE_NAME graphene.bs
            &KPOINT_SET
               UNITS B_VECTOR
               SPECIAL_POINT 0.0000000000     0.0000000000     0.0000000000    #G
               SPECIAL_POINT 0.5000000000     0.0000000000     0.0000000000    #M
               SPECIAL_POINT 0.6666666667     0.3333333333     0.0000000000    #K
               SPECIAL_POINT 0.0000000000     0.0000000000     0.0000000000    #G
               NPOINTS 30
            &END
      &END BAND_STRUCTURE	  
    &END PRINT
  &END DFT
&END FORCE_EVAL
